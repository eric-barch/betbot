{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug TypeScript",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node",
      "runtimeArgs": [
        "-r",
        "tsconfig-paths/register"
      ],
      "args": [
        "${workspaceRoot}/src/main.ts"
      ],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": [
        "node_modules/**"
      ],
      "console": "integratedTerminal"
    }
  ]
}